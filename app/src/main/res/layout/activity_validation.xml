<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_validation">

    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verification code"
        android:gravity="center"
        android:textColor="@color/design_default_color_primary_dark"
        android:textStyle="bold"
        android:textSize="26dp"
        android:paddingTop="16dp"/>



    <TextView
        android:id="@+id/textViewRegister2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We will send you the code"
        android:gravity="center"
        android:textColor="@color/design_default_color_primary_dark"
        android:layout_marginTop="10dp"
        android:paddingTop="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewRegister3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="al"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:textColor="@color/design_default_color_primary_dark"
            android:layout_marginTop="10dp"
            android:paddingTop="16dp"/>

        <TextView
            android:id="@+id/textViewRegister3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+50377563510"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary_dark"
            android:layout_marginTop="10dp"
            android:paddingTop="16dp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/textViewRegister3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wrong number?"
        android:gravity="center"
        android:textColor="@color/design_default_color_primary_dark"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:paddingTop="16dp"
        tools:ignore="DuplicateIds" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_background"
            android:gravity="center_vertical|center_horizontal"/>


        <EditText
            android:id="@+id/editText2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_background"
            android:gravity="center_vertical|center_horizontal"/>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_background"
            android:gravity="center_vertical|center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:text="-"
            android:textSize="35dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_background"
            android:gravity="center_vertical|center_horizontal"/>

        <EditText
            android:id="@+id/editText5"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_background"
            android:gravity="center_vertical|center_horizontal"/>

        <EditText
            android:id="@+id/editText6"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext_background"
            android:gravity="center_vertical|center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Reenviar SMS"
            android:layout_marginRight="170dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0:00"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonValidate"
        android:layout_width="25mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal"
        android:text="Siguiente"/>

</LinearLayout>